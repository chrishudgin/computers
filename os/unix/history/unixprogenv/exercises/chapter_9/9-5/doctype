# doctype, revised:  synthesize proper command line for troff without using cat
egrep -h '^\.(EQ|TS|\[|PS|IS|PP)' $* |
sort -u |
awk -v FILELIST="$*" '
/^\.PP/	{ ms++ }
/^\.EQ/	{ eqn++ }
/^\.TS/	{ tbl++ }
/^\.PS/	{ pic++ }
/^\.IS/	{ ideal++ }
/^\.\[/	{ refer++ }
END {
	needfiles = 1
	if (refer > 0) {
		printf "refer %s | ", FILELIST
		needfiles = 0
	}
	if (pic > 0) {
		if (needfiles == 1) {
			printf "pic %s | ", FILELIST
			needfiles = 0
		} else {
			printf "pic | "
		}
	}
	if (ideal > 0) {
		if (needfiles == 1) {
			printf "ideal %s | ", FILELIST
			needfiles = 0
		} else {
			printf "ideal | "
		}
	}
	if (tbl > 0) {
		if (needfiles == 1) {
			printf "tbl %s | ", FILELIST
			needfiles = 0
		} else {
			printf "tbl | "
		}
	}
	if (eqn > 0) {
		if (needfiles == 1) {
			printf "eqn %s | ", FILELIST
			needfiles = 0
		} else {
			printf "eqn | "
		}
	}
	printf "troff "
	if (ms > 0) printf "-ms "
	if (needfiles == 1) printf "%s", FILELIST
	printf "\n"
} '
